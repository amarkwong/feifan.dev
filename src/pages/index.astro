---
import Layout from '../layouts/Layout.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';

const experience = [
  {
    company: 'Independent Consultant',
    role: 'Freelance Engineer & Advisor',
    period: '2022 — Present',
    year: '2022',
    summary:
      'Partnering with founders and SMEs to prototype finance and energy tooling, blending Julia models, Next.js frontends, and Notion automations into shippable insights.',
    technologies: ['Next.js', 'Notion API', 'Julia', 'Vercel'],
    projects: [
      {
        name: 'Energy Rates Advisor',
        description: 'Julia-backed calculator that mirrors ERSA pricing logic so customers can explore tariffs and solar scenarios in minutes.',
      },
      {
        name: 'Notion Delivery Hub',
        description: 'Notion + Next.js playbook that centralizes project docs, automated reminders, and embedded forms for boutique clients.',
      },
    ],
  },
  {
    company: 'Edge2020 (Edge Energy Services)',
    role: 'Senior IT Developer & Analyst',
    period: '2019 — 2022',
    year: '2019',
    summary:
      'Led the modernization of the Edge client portal, TEEMS back office, and internal calculators, translating ERSA rules into resilient Azure-first services.',
    technologies: ['Azure Functions', 'Next.js', 'SQL Managed Instance', 'Power BI'],
    projects: [
      {
        name: 'Client Portal Modernization',
        description: 'Refreshed portal.edgeenergyservices.com.au with modular UI, role-specific workflows, and integrated rate calculators.',
      },
      {
        name: '5MS Data Pipeline',
        description: 'Built meter and pricing processors for the Five-Minute Settlement reform, ensuring clean data ingestion and reporting.',
      },
    ],
  },
  {
    company: 'JR Academy',
    role: 'Full Stack Web Developer',
    period: '2018 — 2019',
    year: '2018',
    summary:
      'Shipped features across the public site and learning platform using React, Redux, .NET APIs, and AWS to speed enrolment and content delivery.',
    technologies: ['React', 'Redux', '.NET Core', 'AWS EC2'],
    projects: [
      {
        name: 'Learning Platform Revamp',
        description: 'Updated learn.jiangren.com.au with responsive modules, SSO, and performance optimizations backed by .NET services.',
      },
      {
        name: 'Enrollment Automation',
        description: 'Introduced workflows that sync course registrations with CRM and reporting via AWS-hosted microservices.',
      },
    ],
  },
  {
    company: 'China Industrial Bank',
    role: 'Software Engineer',
    period: '2008 — 2013',
    year: '2008',
    summary:
      'Engineered high-availability services for the bank’s core transaction system with C, embedded SQL, and Tuxedo middleware on AIX.',
    technologies: ['C', 'Embedded SQL', 'Tuxedo', 'AIX'],
    projects: [
      {
        name: 'Availability Monitor System',
        description: 'Developed bash + awk monitoring that tracks middleware health and alerts ops teams before outages.',
      },
      {
        name: 'Transaction Middleware Hardening',
        description: 'Optimized Tuxedo/WebLogic services and MQ integrations to keep SLA-critical workloads stable at scale.',
      },
    ],
  },
];
---

<Layout title="feifan.dev">
  <header class="hero glass-panel">
    <span class="chip">Currently building for the web</span>
    <h1>Feifan crafts calm, high-impact digital experiences.</h1>
    <p>
      Front-of-the-frontend engineer obsessed with razor-sharp performance, thoughtful motion,
      and joyful tooling. I distill complex systems into focused, human interfaces.
    </p>
    <div class="hero-links">
      <a class="hero-cta" href="#experience">View experience timeline</a>
      <a class="hero-secondary" href="/thoughts">Visit the thoughts hub</a>
      <a class="hero-secondary" href="mailto:hi@feifan.dev">Get in touch</a>
    </div>
  </header>

  <section id="about">
    <h2>About</h2>
    <p>
      Hi, I’m Feifan—a software engineer passionate about minimal, performant web
      experiences. I build, I learn, I share.
      Long-form notes now live on <a href="/thoughts">the Thoughts page</a> for folks who want to dive deeper.
    </p>
  </section>

  <section id="experience">
    <h2>Experience</h2>
    <ExperienceTimeline items={experience} />
  </section>

</Layout>

<style>
  .hero {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    background: none;
    border: 1px solid var(--panel-border);
  }

  .hero h1 {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin: 0;
    line-height: 1.1;
    color: var(--text-primary);
  }

  .hero p {
    font-size: 1.15rem;
    margin: 0;
    color: var(--text-muted);
  }

  .hero-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero-cta,
  .hero-secondary {
    text-decoration: none;
    padding: 0.85rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 1rem;
    transition: transform 0.2s ease, background 0.2s ease, color 0.2s ease;
  }

  .hero-cta {
    background: var(--accent);
    color: #fff;
  }

  .hero-secondary {
    border: 1px solid var(--panel-border);
    color: var(--text-primary);
  }

  .hero-cta:hover,
  .hero-cta:focus-visible,
  .hero-secondary:hover,
  .hero-secondary:focus-visible {
    transform: translateY(-2px);
  }

  @media (max-width: 720px) {
    .hero {
      padding: 2.25rem;
    }
  }
</style>